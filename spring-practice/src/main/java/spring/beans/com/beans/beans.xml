<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<bean id="person" class="spring.beans.com.Person">
		<constructor-arg name="id" value="5" type="int"></constructor-arg>
		<constructor-arg name="name" value="Jerry" type="String"></constructor-arg>
		<property name="taxId" value="888"></property>
		<property name="address" ref="address"></property>
	</bean>

	<bean name="address" class="spring.beans.com.Address">
		<constructor-arg name="address" value="111 SaintAnnes"></constructor-arg>
		<constructor-arg name="index" value="D12"></constructor-arg>
	</bean>
</beans>
